@page
@model FoodProject.Pages.MyAlimentos.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Alimento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Alimento.Id" />
            <div class="form-group">
                <label asp-for="Alimento.Name" class="control-label"></label>
                <input asp-for="Alimento.Name" class="form-control" />
                <span asp-validation-for="Alimento.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alimento.Categoria" class="control-label"></label>
                <select asp-for="Alimento.CategoriaId" class="form-control" asp-items="ViewBag.NomeCategoria"></select>
                <span asp-validation-for="Alimento.CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <div class="form-group">
                    @{ for (int i = 0; i < Model.AcaoList.Count; i++)
                        {
                            <input asp-for="@Model.AcaoList[i].Value" type="hidden" />
                            {
                                <input asp-for="@Model.AcaoList[i].Selected" /> @Model.AcaoList[i].Text
                            }
                            <br />
                        }
                    }
                </div>

            </div>
            <div class="form-group">





                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
