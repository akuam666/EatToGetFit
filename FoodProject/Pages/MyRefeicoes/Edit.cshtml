@page
@model FoodProject.Pages.MyRefeicoes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Refeicao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Refeicao.Id" />
            <div class="form-group">
                <label asp-for="Refeicao.NomeRefeição" class="control-label"></label>
                <input asp-for="Refeicao.NomeRefeição" class="form-control" />
                <span asp-validation-for="Refeicao.NomeRefeição" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Refeicao.RefeicaoData" class="control-label"></label>
                <input asp-for="Refeicao.RefeicaoData" class="form-control" />
                <span asp-validation-for="Refeicao.RefeicaoData" class="text-danger"></span>
            </div>
        @*    <div class="form-group">
                <label asp-for="Refeicao.UserId" class="control-label"></label>
                <select asp-for="Refeicao.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Refeicao.UserId" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                 <div class="form-group">
                    @{ for (int i = 0; i < Model.AlimentoList.Count; i++)
                        {
                            <input asp-for="@Model.AlimentoList[i].Value" type="hidden" />
                            {
                                <input asp-for="@Model.AlimentoList[i].Selected" /> @Model.AlimentoList[i].Text
                            }
                            <br />
                        }
                    }
               </div>      

        


                <div class="form-group">
                <label asp-for="Refeicao.RefeicaoData" class="control-label"></label>

                @foreach (var item in Model.Refeicao.AlimentoRefeicao)
                {
                    <tr>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Gramas)
                        </td>
                    </tr>
                }
        



                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
