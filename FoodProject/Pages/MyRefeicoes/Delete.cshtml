@page
@model FoodProject.Pages.MyRefeicoes.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Refeicao</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Refeicao.NomeRefeição)
        </dd>
        <dt class="col-sm-2">
            Start
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Refeicao.HoraInicio)
        </dd>
        
        <dt class="col-sm-2">
            End
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Refeicao.HoraFim)
        </dd>
          <dt class="col-sm-2">
            Food
        </dt>
       <dd class="col-sm-10">
             @{
                        string actions = "";
                        actions = string.Join(", ", Model.Refeicao.AlimentoRefeicao.Select(m => m.Alimentos.Name));
                        <span>@actions</span>
                    }
        </dd>



    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Refeicao.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
